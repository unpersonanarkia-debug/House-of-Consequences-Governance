{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "canonical://casebook/schema/v1.0/meta",
  "title": "Canonical Metadata",
  "type": "object",

  "required": [
    "canonical_uri",
    "canonical_signature",
    "governance_engine",
    "version"
  ],

  "properties": {
    "canonical_uri": {
      "type": "string",
      "pattern": "^canonical://casebook/v1.0/CCB-[0-9]{3}/[a-z0-9\\-]+$"
    },

    "canonical_signature": {
      "type": "string",
      "description": "Cryptographic or institutional signature proving canonical authority"
    },

    "governance_engine": {
      "type": "string",
      "const": "House of Consequences Governance"
    },

    "version": {
      "type": "string",
      "const": "1.0"
    }
  },

  "additionalProperties": false
}
