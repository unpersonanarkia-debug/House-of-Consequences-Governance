{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "canonical://casebook/schema/v1.0/lifecycle",
  "title": "Decision Lifecycle Stage",
  "type": "object",

  "required": [
    "stage",
    "description",
    "actors"
  ],

  "properties": {
    "stage": {
      "type": "string",
      "enum": [
        "trigger",
        "interpretation",
        "decision",
        "immediate_consequence",
        "recursive_effect",
        "normalized_state"
      ]
    },

    "description": {
      "type": "string",
      "minLength": 15
    },

    "actors": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },

    "artifacts": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },

  "additionalProperties": false
}
